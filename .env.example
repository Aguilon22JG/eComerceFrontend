# Archivo de ejemplo para variables de entorno
# Copia este archivo como .env y configura tus valores

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3000/api
REACT_APP_API_TIMEOUT=10000

# Endpoints principales
REACT_APP_AUTH_ENDPOINT=/auth
REACT_APP_PRODUCTS_ENDPOINT=/products
REACT_APP_CATEGORIES_ENDPOINT=/categories
REACT_APP_CART_ENDPOINT=/cart
REACT_APP_ORDERS_ENDPOINT=/orders
REACT_APP_USERS_ENDPOINT=/users

# Configuración de la aplicación
REACT_APP_APP_NAME=Mi Ecommerce
REACT_APP_CURRENCY=USD
REACT_APP_ITEMS_PER_PAGE=12

# Configuración de imágenes
REACT_APP_IMAGES_BASE_URL=http://localhost:3001/uploads
REACT_APP_DEFAULT_IMAGE=/images/no-image.jpg

# Configuración de autenticación
REACT_APP_JWT_SECRET=tu_clave_secreta_aqui
REACT_APP_TOKEN_EXPIRY=86400

# PayPal (configurar con tus claves de sandbox)
REACT_APP_PAYPAL_CLIENT_ID=tu_paypal_client_id

# Stripe (configurar con tu clave pública de test)
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_tu_stripe_key

# Configuración local
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG_MODE=true